{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": [
      false
    ],
    "max-classes-per-file": [
      true,
      10,
      "exclude-class-expressions"
    ],
    "max-line-length": [
      false,
      100
    ],
    "member-ordering": [
      false,
      "variables-before-functions"
    ],
    "no-duplicate-variable": true,
    "no-shadowed-variable": false,
    "no-trailing-whitespace": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "object-literal-sort-keys": [
      false
    ],
    "ordered-imports": [
      false
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "variable-name": {
      "options": [
        "allow-leading-underscore",
        "allow-pascal-case",
        "allow-snake-case",
        "check-format"
      ]
    },
    "semicolon": [
      true,
      "never"
    ],
    "object-literal-key-quotes": [
      false,
      "always"
    ],
    "member-access": false,
    "no-var-requires": false,
    "jsx-no-multiline-js": false,
    "no-console": false,
    "generator-star-spacing": true
  }
}